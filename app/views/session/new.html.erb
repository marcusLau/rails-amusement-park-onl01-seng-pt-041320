<h1>Sign-in</h1>

<%= form_tag("/signin", method: 'post') do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <p>Select a User: <%= collection_select(:user, :name, User.all, :name, :name) %></p>
    <p>Password: <%= password_field_tag :password %></p>
    <%= submit_tag "Sign-in" %>
<% end %>